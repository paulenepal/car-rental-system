<%= form_with(model: customer) do |form| %>
    <% if @customer.errors.any? %>
        <div style="color: red">
            <h2>
                <%= pluralize(@customer.errors.count, "error")%> prohibited from being saved:
            </h2>

            <ul>
                <% @customer.errors.each do |error| %>
                    <li><%=error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :full_name %><br>
        <%= form.text_field :full_name %>
    </p>

    <p>
        <%= form.label :email %><br>
        <%= form.email_field :email %>
    </p>

    <p>
        <%= form.label :address %><br>
        <%= form.text_field :address %>
    </p>

    <p>
        <%= form.label :contact_number %><br>
        <%= form.text_field :contact_number %>
    </p>

    <div class="button">
        <%= form.submit "Submit", class: "button" %> <%= link_to 'Back to Customer List', customers_path %>
    </div>
    
<% end %>
